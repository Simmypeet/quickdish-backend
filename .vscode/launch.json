    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/api/__init__.py",
            "args": [
                "run",
                "--reload"
            ],
            "jinja": true
        },
        
        
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "__init__:app",
                "--reload"
            ],
            "jinja": true
        }
    ]
}